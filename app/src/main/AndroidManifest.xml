<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hvg.listeningee">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name=".MainTestActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".NextActivity"
            android:label="@string/title_activity_next" />
        <activity
            android:name=".DownloadActivity"
            android:label="@string/title_activity_download"></activity>
        <activity
            android:name=".AdmobActivity"
            android:label="@string/title_activity_admob" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LessonListActivity"
            android:label="@string/title_activity_lesson_list"></activity>
    </application>

</manifest>
